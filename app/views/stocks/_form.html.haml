= form_with(model: stock) do |form|
  - if stock.errors.any?
    #error_explanation
      %h2
        = pluralize(stock.errors.count, "error")
        prohibited this stock from being saved:
      %ul
        - stock.errors.each do |error|
          %li= error.full_message
  .field
    = form.label :ticker
    = form.text_field :ticker
  .field
    = form.number_field :user_id, value: current_user.id, type: :hidden
  .actions
    = form.submit
